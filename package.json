{
	"name": "salt-vscode",
	"displayName": "salt-vscode",
	"description": "Salt language plugin",
	"version": "0.0.1",
	"publisher": "discus-lang",
	"repository": {
		"type": "git",
		"url": "git://github.com/discus-lang/salt-vscode.git"
	},
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld",
		"onLanguage:salt"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "salt",
				"extensions": [
					".salt"
				],
				"aliases": [
					"Salt"
				],
				"configuration": "data/salt.json"
			}
		],
		"grammars": [
			{
				"language": "salt",
				"scopeName": "source.salt",
				"path": "./syntaxes/salt.tmGrammar.json"
			}
		],
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			}
		],
                "configuration": {
			"type": "object",
			"title": "Salt configuration",
			"properties": {
				"salt.trace.server": {
					"scope": "window",
					"type":  "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"vsce": "^1.54.0",
		"vscode-languageclient": "^3.3.0"
	}
}
